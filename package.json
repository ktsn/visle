{
  "name": "visle",
  "version": "0.2.1",
  "description": "Islands Architecture renderer for Vue.js",
  "type": "module",
  "exports": {
    ".": "./dist/server/index.js",
    "./client": "./dist/client/custom-element.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "visle": "./bin/visle.js"
  },
  "scripts": {
    "build": "tsc -p .",
    "test": "vitest",
    "test:coverage": "vitest --coverage --coverage.reporter=lcov",
    "lint": "pnpm biome lint ./",
    "format": "pnpm biome format --write ./",
    "prepublishOnly": "pnpm lint && pnpm run test --run && rm -rf dist && pnpm build"
  },
  "keywords": [
    "Vue.js",
    "islands architecture",
    "template engine",
    "server side rendering",
    "multi-page application"
  ],
  "author": "Katashin",
  "license": "MIT",
  "packageManager": "pnpm@9.9.0+sha512.60c18acd138bff695d339be6ad13f7e936eea6745660d4cc4a776d5247c540d0edee1a563695c183a66eb917ef88f2b4feb1fc25f32a7adcadc7aaf3438e99c1",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/connect": "^3.4.38",
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.16",
    "@types/sanitize-html": "^2.15.0",
    "@vitest/coverage-v8": "3.1.1",
    "rollup": "^4.38.0",
    "typescript": "^5.8.2",
    "vitest": "^3.1.1",
    "vue": "^3.5.13"
  },
  "peerDependencies": {
    "vue": ">=3.0.0"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^5.2.3",
    "cac": "^6.7.14",
    "connect": "^3.7.0",
    "esbuild": "^0.25.2",
    "glob": "^11.0.1",
    "vite": "^6.2.4"
  }
}
