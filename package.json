{
	"name": "@ktsn/vue-island",
	"version": "0.0.0",
	"description": "Vue as a server side template engine",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"build": "tsc -p .",
		"test": "node --test --watch --experimental-strip-types ./test/**/*.test.ts",
		"lint": "pnpm biome lint ./src",
		"format": "pnpm biome format --write ./src",
		"demo": "cd demo && node --experimental-strip-types server.ts",
		"demo:production": "cd demo && NODE_ENV=production node --experimental-strip-types server.ts",
		"demo:build": "cd demo && vite build --outDir server-dist --ssr entry-server.ts && vite build --outDir client-dist"
	},
	"keywords": [
		"Vue.js",
		"island architecture",
		"template engine",
		"server side rendering",
		"multi-page application"
	],
	"author": "Katashin",
	"license": "MIT",
	"packageManager": "pnpm@9.9.0+sha512.60c18acd138bff695d339be6ad13f7e936eea6745660d4cc4a776d5247c540d0edee1a563695c183a66eb917ef88f2b4feb1fc25f32a7adcadc7aaf3438e99c1",
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@types/express": "^5.0.0",
		"@types/node": "^22.5.4",
		"@types/sanitize-html": "^2.13.0",
		"@vitejs/plugin-vue": "^5.1.4",
		"express": "^4.21.0",
		"marked": "^14.1.2",
		"rollup": "^4.21.2",
		"sanitize-html": "^2.13.0",
		"typescript": "^5.5.4",
		"vite": "^5.4.8",
		"vue": "^3.5.9"
	},
	"peerDependencies": {
		"vue": ">=3.0.0"
	}
}
